<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_model_fields_hidden_list_view" model="ir.ui.view">
        <field name="name">ir.model.fields.hidden.list</field>
        <field name="model">ir.model.fields.hidden</field>
        <field name="arch" type="xml">
            <list string="Hidden Fields Configuration" editable="bottom">
                <field name="field_id" options="{'no_create': True}"/>
                <field name="condition_field_id" options="{'no_create': True}"/>
            </list>
        </field>
    </record>

    <record id="ir_model_fields_hidden_action" model="ir.actions.act_window">
        <field name="name">Hidden Fields</field>
        <field name="res_model">ir.model.fields.hidden</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="menu_hidden_fields_sub"
    name="Hidden Fields"
    action="ir_model_fields_hidden_action"

    parent="base.menu_automation"

    sequence="100"/>

</odoo>